generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PlayedGame {
  id        Int      @id @default(autoincrement())
  emojis    String   @unique
  answer    String
  theme     String
  createdAt DateTime @default(now())
}

// Model for storing the emoji puzzles
model Puzzle {
  id         Int     @id @default(autoincrement())
  emojis     String
  answer     String
  category   String?
  difficulty String?
}

// Model for tracking user scores on the leaderboard
model User {
  id               String    @id @unique
  username         String
  score            Int       @default(0)
  lastGamePlayedAt DateTime?
}
