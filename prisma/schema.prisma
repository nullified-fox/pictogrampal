generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Below this, you'll add your data models

// Model for storing the emoji puzzles
model Puzzle {
  id         Int     @id @default(autoincrement())
  emojis     String
  answer     String
  category   String?
  difficulty String?
}

// Model for tracking user scores on the leaderboard
model User {
  id       String @id @unique
  username String
  score    Int    @default(0)
}
